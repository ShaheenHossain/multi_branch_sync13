<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_replace_button_form" model="ir.ui.view">
        <field name="name">sale.order.replace.button.form</field>
        <field name="model">sale.order</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="is_out_of_stock" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                <button type="action" name="%(familiar_similar_product.action_replace_product_wizard)d" icon="fa-refresh" attrs="{'invisible': ['|',('is_out_of_stock', '=', False), ('parent.state', 'not in', ['draft', 'sent'])]}"/>
            </xpath>
        </field>
    </record>
</odoo>